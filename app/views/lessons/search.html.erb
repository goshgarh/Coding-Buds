    <div class="row mx-auto">
      <div class="col-lg-12 text-center lesson_padding"><a href="<%= root_path %>">
          <%= lesson.name %></a>
      </div>
    </div>
    <div class="row mx-auto py-1">
      <div class="col-lg-12 text-center">
        <%= lesson.description %>
      </div>
    </div>

    <pre data-enlighter-language="<%=lesson.language.name %>">
      <%= lesson.syntax %>
    </pre>
    <div class="row mx-auto-py-1">
      <div class="col-lg-12 text-center">

      
      </div>
    </div>
