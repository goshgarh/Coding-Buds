<div class="container lessons_container2">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class="lesson_edit_head_font">
        Create A New Lesson
      </h1>
    </div>
  </div>

  <%= form_for @lesson do |f| %>
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <%= f.label :name %>
      <%= f.text_field :name, class:'form-control lesson_input' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <%= f.label :description %>
      <%= f.text_field :description, class:'form-control lesson_input' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <%= f.label :syntax %>
      <%= f.text_area :syntax, class:'form-control lesson_input' %>
    </div>
  </div>
  <div class="row mx-auto py-1">
    <div class="col-lg-12 text-center">
      <%= f.label :language_id %>
      <%= f.select :language_id, options_for_select(@languages.map {|l|[l.name, l.id]}), {}, { class: 'lesson_select'} %>

  </div>
  <div class="row mx-auto">
    <div class="col-lg-12 text-center">
      <%=f.submit 'Create a Lesson', class:'btn lesson_btn' %>
    </div>
  </div>
<% end %>
</div>
